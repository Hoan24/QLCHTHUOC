<div class="clearfix"></div>

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row mt-3">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Thêm sản phẩm</div>
                        <hr>
                        <form asp-controller="Medicine" asp-action="AddMedicine" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <input type="file" id="uploadimg" name="uploadimg" accept="image/*">
                            </div>
                            <div class="form-group">
                                <label for="input-2">Tên sản phẩm</label>
                                <input type="text" class="form-control" id="input-2" name="Name" placeholder="Nhập tên sản phẩm">
                            </div>
                            <div class="form-group">
                                <label for="input-3">Mô tả</label>
                                <input type="text" class="form-control" id="input-3" name="Description" placeholder="Nhập mô tả sản phẩm">
                            </div>
                            <div class="form-group">
                                <label for="input-4">Giá bán</label>
                                <input type="text" class="form-control" id="input-4" name="Price" placeholder="Nhập giá bán sản phẩm">
                            </div>
                            <div class="form-group">
                                <label for="input-5">Số lượng</label>
                                <input type="text" class="form-control" id="input-5" name="Stock" placeholder="Nhập số lượng sản phẩm">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
                                <a asp-controller="Medicine" asp-action="Index" class="btn btn-primary">Quay lại</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
