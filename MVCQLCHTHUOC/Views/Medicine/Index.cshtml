<div class="container mt-3" style="max-width: 1000px;">
    <div class="text-center mb-4">
        <h2 style="color: #fff;">DANH SÁCH SẢN PHẨM</h2>
    </div>

    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                <div class="card h-100" style="max-width: 250px; margin: auto;">
                    <img src="~/Upload/Medicine/@item.ImgURl" class="card-img-top" alt="Product Image" style="width: 100%; height: 100px; object-fit: cover;">
                    <div class="card-body p-2">
                        <h6 class="card-title" style="font-size: 1rem;">@item.Name</h6>
                        <p class="card-text" style="font-size: 0.75rem;">@item.Description</p>
                        <ul class="list-group list-group-flush" style="font-size: 0.75rem;">
                            <li class="list-group-item" style="padding: 0.25rem;">Giá bán: @item.Price</li>
                            <li class="list-group-item" style="padding: 0.25rem;">Số lượng: @item.Stock</li>
                        </ul>
                        <div class="text-center mt-2">
                            <a asp-controller="Medicine" asp-action="EditMedicine" asp-route-id="@item.Id" class="btn btn-primary btn-sm btn-edit" style="font-size: 0.75rem;">Edit</a>
                            <a asp-controller="Medicine" asp-action="ListMedicinebyid" asp-route-id="@item.Id" class="btn btn-info btn-sm btn-detail" style="font-size: 0.75rem;">Detail</a>
                            <form asp-action="DeleteMedicineConfirmed" method="post" style="display: inline;">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-danger btn-sm btn-delete" style="font-size: 0.75rem;">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="footer mt-auto py-3" style="position: fixed; bottom: 30px; right: 30px;">
    <a asp-controller="Medicine" asp-action="AddMedicine">
        <button class="btn btn-primary" style="border-radius: 50%; width: 50px; height: 50px; display: flex; align-items: center; justify-content: center; font-size: 24px;">
            +
        </button>
    </a>
</div>
