@model MVCQLCHTHUOC.Models.RegisterViewModel

@if (ViewBag.RegisterSuccess != null && ViewBag.RegisterSuccess)
{
    <div class="alert alert-success" role="alert">
        Đăng ký thành công! Đang chuyển hướng đến trang đăng nhập...
    </div>
}
<div class="clearfix"></div>

<div class="card card-authentication1 mx-auto my-4 container-fluid row mt-3">
    <div class="card-body">
        <div class="card-content p-2">
            <div class="card-title text-uppercase text-center py-3">ĐĂNG KÝ</div>
            <form asp-action="Register" method="post" id="registerForm">

                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <span asp-validation-for="Username" class="text-danger"></span>
                    <div class="position-relative has-icon-right">
                        <input asp-for="Username" type="text" id="exampleInputEmailId" class="form-control input-shadow" placeholder="Nhập email của bạn">
                        <div class="form-control-position">
                            <i class="icon-envelope-open"></i>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <label for="exampleInputPassword" class="sr-only">Password</label>
                    <div class="position-relative has-icon-right">
                        <input asp-for="Password" type="password" id="exampleInputPassword" class="form-control input-shadow" placeholder="Nhập mật khẩu của bạn">
                        <div class="form-control-position">
                            <i class="icon-lock"></i>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="roles">Roles</label>
                    <div>
                      
                        <input type="checkbox" id="roleReader" name="Roles" value="Read">
                        <label for="roleReader">User</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-light btn-block waves-effect waves-light">Đăng Ký</button>
                <div class="text-center mt-3">Đăng ký với</div>

                <div class="form-row mt-4">
                    <div class="form-group mb-0 col-6">
                        <button type="button" class="btn btn-light btn-block"><i class="fa fa-facebook-square"></i> Facebook</button>
                    </div>
                    <div class="form-group mb-0 col-6 text-right">
                        <button type="button" class="btn btn-light btn-block"><i class="fa fa-twitter-square"></i> Twitter</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="card-footer text-center py-3">
        <p class="text-warning mb-0">Bạn đã có tài khoản? <a asp-action="Login"> Đăng nhập ngay</a></p>
    </div>
</div>
<script>
    document.getElementById('registerForm').addEventListener('submit', function (event) {
        var selectedRoles = [];
        document.querySelectorAll('input[name="Name"]:checked').forEach(function (checkbox) {
            selectedRoles.push(checkbox.value);
        });
        var hiddenRolesField = document.createElement('input');
        hiddenRolesField.type = 'hidden';
        hiddenRolesField.name = 'Name';
        hiddenRolesField.value = JSON.stringify(selectedRoles);
        this.appendChild(hiddenRolesField);
    });
</script>
