@model List<MVCQLCHTHUOC.Models.MedicineDTO>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-3">
    <h1 class="text-center mb-4">Chào mừng đến với trang chủ!</h1>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 mb-3">
                <div class="card">
                    <img src="~/Upload/Medicine/@item.ImgURl" class="card-img-top" alt="Product Image" style="width: 100%; height: 150px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <div class="text-center mt-3">
                            <a href="/Medicine/Index" class="btn btn-primary btn-sm">Thông tin</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
